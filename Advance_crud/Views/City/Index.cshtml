@model IEnumerable<Advance_crud.Models.City>
@{
    ViewData["Title"] = "Index";
}
@{
    var errorMessage = TempData["ErrorMessage"] as string;
}

@if (!string.IsNullOrEmpty(errorMessage))
{
    <div class="alert alert-danger" role="alert" id="errorMessage">
        @errorMessage
    </div>
}


<h2>Index</h2>
<a asp-action="Create" class="btn btn-outline-primary">Create New </a>
<div class="table-responsive">
    <table class="table table-striped table-bordered mt-3">
        <thead>
            <tr>
                <th>
                    City Name
                </th>
                <th>
                    State Name
                </th>
                <th>
                    Action
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var coun in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(model => coun.city_name)
                    </td>
                    <td>
                        @Html.DisplayFor(model => coun.State.state_name)
                    </td>
                    <td>
                        <form method="post">
                            <a asp-action="Edit" asp-controller="City" asp-route-id="@coun.city_id" class="btn btn-outline-success">Edit</a>
                            <a asp-action="Details" asp-controller="City" asp-route-id="@coun.city_id" class="btn btn-outline-warning">Details</a>
                            <input type="submit" asp-action="Delete" asp-controller="City" asp-route-id="@coun.city_id" value="Delete" class="btn btn-outline-danger" />
                        </form>

                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
