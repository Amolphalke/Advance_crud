@model Advance_crud.Models.State;
@{
    ViewData["Title"] = "Edit";
}

<h2>Edit State </h2>
<div class="container">
    <form method="post">
        <input asp-for="state_id" type="hidden"/>
        <div class="row">
            <div class="col-6 form-group">
                <label asp-for="state_name" class="form-label">State Name</label>
                <input asp-for="state_name" class="form-control" />
                <span asp-validation-for="state_name" class="text-danger"></span>
            </div>
            <div class="col-6 form-group">
                <label asp-for="country_id" class="form-label">Country Name</label>
                <select asp-for="country_id" asp-items="@(new SelectList(ViewBag.Countrylist, "country_id", "country_name"))" class="form-control">
                    <option value="">Select Country</option>
                </select>
                <span asp-validation-for="country_id" class="text-danger"></span>
            </div>
        </div>
        <div class="row mt-2">
            <div class="col-4">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </div>

    </form>

</div>
